{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Default build configuration",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "release",
      "inherits": "default",
      "displayName": "Release Config",
      "description": "Release build configuration",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "coverage",
      "inherits": "default",
      "displayName": "Coverage Config",
      "description": "Build with coverage enabled",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_COVERAGE": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "description": "Default build"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "description": "Release build"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "description": "Run all tests",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "unit",
      "inherits": "default",
      "description": "Run unit tests only",
      "filter": {
        "include": {
          "label": "unit"
        }
      }
    },
    {
      "name": "cypher",
      "inherits": "default",
      "description": "Run Cypher tests only",
      "filter": {
        "include": {
          "label": "cypher"
        }
      }
    },
    {
      "name": "verbose",
      "inherits": "default",
      "description": "Run tests with verbose output",
      "output": {
        "verbosity": "verbose",
        "outputOnFailure": true
      }
    }
  ]
}